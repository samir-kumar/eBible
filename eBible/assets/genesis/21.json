1021030.1":{"note_class":"alternative","note_sub_class":null,"content":"Or <i>you</i>","verse_id":1021030},"n01021003.1":{"note_class":"explanation","note_sub_class":"name-meaning","content":"<i class='catch-word'>Isaac</i> means <i>he laughs</i>","verse_id":1021003},"n01021031.1":{"note_class":"explanation","note_sub_class":"name-meaning","content":"<i class='catch-word'>Beersheba</i> means <i>well of seven</i> or <i>well of the oath</i>","verse_id":1021031},"n01021009.1":{"note_class":"alternative","note_sub_class":null,"content":"Possibly <i><span class='catch-word'>laughing</span> in mockery</i>","verse_id":1021009}}}}